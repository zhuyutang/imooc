extends ../layout
block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 时间
						th 权限
						th 查看
						th 修改
						th 删除
				tbody
					each item in users
						tr(class="item-id-#{item._id}")
							td #{item.name}
							td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
							td #{item.role}
							td: a(target="_blank",href="#") 查看
							td: a(target="_blank",href="#") 修改
							td
								button.btn.btn-dannger.del(type="button",data-id="#{item._id}") 删除
	script(src="/js/admin.js")